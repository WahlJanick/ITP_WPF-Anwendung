<Window x:Class="ToDo_Anwendung_WPF.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:ToDo_Anwendung_WPF"
		mc:Ignorable="d"
		Title="MainWindow" Height="450" Width="800">
	<Grid>
		<Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
		<Grid.RowDefinitions >
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="New" Content="New" Margin="10" Grid.Column="0" Grid.Row="0"></Button>
        <Button x:Name="View" Content="View" Margin="10" Grid.Column="1" Grid.Row="0" ></Button>
        <GroupBox x:Name="NewBox" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3" Grid.RowSpan="2" Visibility="Hidden">
            <TextBox x:Name="NewButtonTextBox"></TextBox>
        </GroupBox>
        <GroupBox x:Name="ViewBox" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3" Grid.RowSpan="2" Visibility="Hidden">
            <ListBox x:Name="ViewListBox">
            </ListBox>
        </GroupBox>
        <Button x:Name="Save" Content="Save" Margin="30 60 30 80" Grid.Column="0" Grid.Row="1" ></Button>
    </Grid>
</Window>
